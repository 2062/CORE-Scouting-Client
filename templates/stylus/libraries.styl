// Parametric Mixins
border_radius(radius)
	-webkit-border-radius radius
	-moz-border-radius radius
	border-radius radius


border_radius_tl(radius)
	-webkit-border-top-left-radius radius
	-moz-border-radius-topleft radius
	border-top-left-radius radius


border_radius_bl(radius)
	-webkit-border-bottom-left-radius radius
	-moz-border-radius-bottomleft radius
	border-bottom-left-radius radius


border_radius_tr(radius)
	-webkit-border-top-right-radius radius
	-moz-border-radius-topright radius
	border-top-right-radius radius


border_radius_br(radius)
	-webkit-border-bottom-right-radius radius
	-moz-border-radius-bottomright radius
	border-bottom-right-radius radius


box-shadow(shadow)
	-moz-box-shadow shadow
	-webkit-box-shadow shadow
	box-shadow shadow


advanced-gradent(gradent_1, gradent_2)
	background-image -webkit-linear-gradient(top, gradent_1, gradent_2)
	background-image -moz-linear-gradient(top, gradent_1, gradent_2)
	background-image -ms-linear-gradient(top, gradent_1 gradent_2)
	background-image "-webkit-gradient(linear, 0% 0%, 0% 100%, from(gradent_1), to(gradent_2)"
	background-image -o-linear-gradient(top, gradent_1, gradent_2)
	background-image linear-gradient(top, gradent_1, gradent_2)


img-gradent(image, color)
	l_color lighten(color, 15%)
	d_color darken(color, 15%)
	background-image image, -webkit-linear-gradient(top, l_color, d_color)
	background-image image, -moz-linear-gradient(top, l_color, d_color)
	background-image image, -ms-linear-gradient(top, l_color d_color)
	background-image image, "-webkit-gradient(linear, 0% 0%, 0% 100%, from(l_color), to(d_color)"
	background-image image, -o-linear-gradient(top, l_color, d_color)
	background-image image, linear-gradient(top, l_color, d_color)


inv-img-gradent(image, color)
	l_color lighten(color, 15%)
	d_color darken(color, 15%)
	background-image image, -webkit-linear-gradient(top, d_color, l_color)
	background-image image, -moz-linear-gradient(top, d_color, l_color)
	background-image image, -ms-linear-gradient(top, d_color l_color)
	background-image image, "-webkit-gradient(linear, 0% 0%, 0% 100%, from(d_color), to(l_color)"
	background-image image, -o-linear-gradient(top, d_color, l_color)
	background-image image, linear-gradient(top, d_color, l_color)


reg-gradent(color)
	l_color lighten(color, 15%)
	d_color darken(color, 15%)
	background-image -webkit-linear-gradient(top, l_color, d_color)
	background-image -moz-linear-gradient(top, l_color, d_color)
	background-image -ms-linear-gradient(top, l_color d_color)
	background-image "-webkit-gradient(linear, 0% 0%, 0% 100%, from(l_color), to(d_color)"
	background-image -o-linear-gradient(top, l_color, d_color)
	background-image linear-gradient(top, l_color, d_color)


inv-gradent(color)
	l_color lighten(color, 15%)
	d_color darken(color, 15%)
	background-image -webkit-linear-gradient(top, d_color, l_color)
	background-image -moz-linear-gradient(top, d_color, l_color)
	background-image -ms-linear-gradient(top, d_color l_color)
	background-image "-webkit-gradient(linear, 0% 0%, 0% 100%, from(d_color), to(l_color)"
	background-image -o-linear-gradient(top, d_color, l_color)
	background-image linear-gradient(top, d_color, l_color)


opacity(opacity)
	opacity_percent = opacity * 100
	-moz-opacity opacity
	filter alpha(opacity=opacity_percent)
	opacity opacity


transition(time)
	-webkit-transition all time ease-out // Saf3.2+, Chrome 
	-moz-transition all time ease-out // FF4+ 
	-ms-transition all time ease-out // IE10? 
	-o-transition all time ease-out // Opera 10.5+ 
	transition all time ease-out // WC3



// Mixins
background() //used on buttons & legends
	background-color reg_color//fallback
	reg-gradent(reg_color)
	box_shadow(0 1px 0 rgba(255,255,255,0.6) inset)


background_highlight() //used on buttons & legends
	background-color highlight_color
	reg-gradent(highlight_color)
	box_shadow('0 0 8px rgba(0, 0, 0, 0.15), 0 1px 0 rgba(255,255,255,0.8) inset')


text()
	text-shadow 0 1px 0 rgba(255, 255, 255, 0.6)
	font-size 14px
	font-weight 700
	color lite_text


