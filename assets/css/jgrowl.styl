@import 'library'

.center .jGrowl-notification, .center .jGrowl-closer
	margin-left auto
	margin-right auto

#jGrowl-container
	z-index 1000
	position relative
	vertical-align bottom
	width 100%
	max-width 250px

.jGrowl
	color #fff
	font-size 12px

	h1
		font-size 14px
		margin 0
		font-weight normal

	.jGrowl-notification, .jGrowl-closer
		background-color #000
		padding 10px
		margin-top 5px
		margin-bottom 5px
		font-size 1em
		text-align left
		display none
		opacity(.8)
		border_radius(3px)

	.jGrowl-notification
		min-height 10px
		min-width 175px
		margin-left 10px
		margin-right 10px

		.jGrowl-header
			font-weight bold
			font-size .85em

		.jGrowl-close
			float right
			font-weight bold
			font-size 1em
			cursor pointer

	.jGrowl-closer
		margin-left 10px
		margin-right 10px
		padding-top 4px
		padding-bottom 4px
		cursor pointer
		font-size .9em
		font-weight bold
		text-align center

.error
	background-color d_error_color !important
.message
	background-color d_highlight_color !important

// Hide jGrowl if page is printed
@media print
	.jGrowl
		display none
